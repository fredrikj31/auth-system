{
  "name": "auth-system",
  "private": true,
  "type": "module",
  "scripts": {
    "api:build": "pnpm run --filter @auth-system/api build",
    "app:build": "pnpm run --filter @auth-system/app build",
    "api:build:check": "pnpm run --filter @auth-system/api build:check",
    "app:build:check": "pnpm run --filter @auth-system/app build:check",
    "api:dev": "pnpm run --filter @auth-system/api dev",
    "app:dev": "pnpm run --filter @auth-system/app dev",
    "api:lint": "pnpm run --filter @auth-system/api lint",
    "app:lint": "pnpm run --filter @auth-system/app lint",
    "api:format:check": "pnpm run --filter @auth-system/api format:check",
    "app:format:check": "pnpm run --filter @auth-system/app format:check",
    "api:format:write": "pnpm run --filter @auth-system/api format:write",
    "app:format:write": "pnpm run --filter @auth-system/app format:write",
    "prepare": "husky",
    "pre-commit": "lint-staged -c lint-staged.config.js"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^16.1.6"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
